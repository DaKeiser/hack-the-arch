<% provide(:title, 'All teams') %>
<h1>Scoreboard</h1>
<div class='jumbotron row hidden-xs'>
	<div id='scoreboard_graph' class='col-sm-12' style='width:100%;height:400px'></div>
</div>

<div class="input-group"> 
	<span class="input-group-addon">Search</span>
	<input id="filter" type="text" class="form-control">
</div>
<br />
<div>
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#all" aria-controls="all" role="tab" data-toggle="tab">All</a></li>
		<% for bracket in @brackets do %>
    	<li role="presentation">
				<a href="#<%= bracket.name %>" aria-controls="<%= bracket.name %>" role="tab" data-toggle="tab"><%= bracket.name %></a>
			</li>
		<% end %>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="all">
			<ol class="teams row teams_list">
				<%= render @sorted_teams %>
			</ol>
		</div>
		<% for bracket in @brackets do %>
    	<div role="tabpanel" class="tab-pane" id="<%= bracket.name %>">
				<ol class="teams row teams_list">
					<%= render @sorted_teams.select { |b| b.bracket_id == bracket.id } %>
				</ol>
			</div>
		<% end %>
  </div>

</div>
