<%= content_tag :li, class: 'searchable' do %>
	<%= gravatar_for user, size: 50 %>
	<%= link_to user.username, user %>
	<% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
		<br />
		<%= mail_to user.email %>
    <br />
		<% if !user.paid? %>
			<%= content_tag :div, "Hasn't paid, created #{distance_of_time_in_words(user.created_at, Time.now)} ago.", class: "text-danger" %>
		<% elsif !user.activated? %>
			<%= content_tag :span, "Not Activated, created #{distance_of_time_in_words(user.created_at, Time.now)} ago.", class: "text-danger" %>
      | <%= link_to "activate now", activate_user_url(user) %>
		<% elsif !user.authorized? %>
      <%= content_tag :span, "Not authorized, created #{distance_of_time_in_words(user.created_at, Time.now)} ago.", class: "text-warning" %>
      | <%= link_to "authorize now", authorize_user_url(user) %>
    <% else %>
			<%= content_tag :div, "User active.", class: "text-success" %>
		<% end %>
  <% end %>
<% end %>
