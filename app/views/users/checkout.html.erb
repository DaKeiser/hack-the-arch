<% provide(:title, 'Checkout') %>

<%= content_tag :h1, 'Checkout' %>
<%= content_tag :div, class: 'row' do %>
	<%= content_tag :div, class: 'col-md-6 col-md-offset-3' do %>

		<%= content_tag :h4, 'To finish your registration, please checkout using stripe below:' %>
		<%= form_tag charge_path(@user) do %>
			<table class="table">
				<thead>
					<tr>
						<td>Qty.</td>
						<td>Item</td>
						<td>Amount</td>
					</tr>
				</thead>
				<tbody>
					<tr> 
						<td>1.</td>
						<td>Registration for <%= competition_name %></td>
						<td><%= number_to_currency(@cost.to_f / 100) %></td>
					</tr>
				</tbody>
			</table>

			<div class="row pull-right">
  			<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          			data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          			data-description="<%= competition_name %> Registration"
          			data-amount="<%= @cost %>"
          			data-locale="auto">
				</script>
			</div>
			<%= hidden_field_tag "user_id", :id, value: @user.id %>
  	<% end %>

  <% end %>
<% end %>

