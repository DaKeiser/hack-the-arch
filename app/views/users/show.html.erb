<% provide(:title, @user.fname) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.fname %>
        <%= @user.lname %>
      </h1>
			<p>
        <%= mail_to @user.email %>
			</p>
		</section>
	</aside>
	<div class="col-md-8 user_stats">
		<% if @user.team_id %>
			<% @team = Team.find(@user.team_id) %>
			<span>
				Member of: <%= link_to @team.name, @team %>
				<% if current_user?(@user) && @user.is_member?(@team) %>
					<%= form_tag(remove_member_path, class: "form-inline col-md-12") do %>
						<%= hidden_field_tag "user_id", @user.id %>
						<%= hidden_field_tag "team_id", @team.id %>
						<%= submit_tag("Leave", class: "form-control btn btn-primary") %>
					<% end %>
				<% end %>
			</span>
		<% else %>
			<% if current_user?(@user) %>
				<p>You are not a member of a team.</p>
				<%= link_to "Create", new_team_path, class: "btn btn-primary" %>
				<%= link_to "Join", teams_path, class: "btn btn-primary" %>
			<% else %>
				<p><%= @user.fname %> does not belong to any team right now</p>
			<% end %>
		<% end %>
	</div>
</div>
